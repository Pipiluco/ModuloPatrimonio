<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/common_google_signin_btn_text_light_focused"
    android:padding="@dimen/dialog">

    <TextView
        android:id="@+id/tvEmpresas"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/empresas"
        android:textAppearance="@style/TextAppearance.AppCompat.Large" />

    <Spinner
        android:id="@+id/spnEmpresa"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvEmpresas" />

    <TextView
        android:id="@+id/tvSetores"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/spnEmpresa"
        android:text="@string/setores"
        android:textAppearance="@style/TextAppearance.AppCompat.Large" />

    <Spinner
        android:id="@+id/spnSetor"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvSetores" />

    <Button
        android:id="@+id/btnFiltrar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/spnSetor"
        android:text="@string/filtrar" />

</RelativeLayout>