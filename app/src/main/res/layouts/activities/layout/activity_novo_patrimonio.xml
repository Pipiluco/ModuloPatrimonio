<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/padding_linear_layout"
    tools:context=".activities.NovoPatrimonioActivity">


    <Spinner
        android:id="@+id/spnEmpresa"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <Spinner
        android:id="@+id/spnSetor"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/spnEmpresa" />

    <EditText
        android:id="@+id/edtPlaqueta"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/spnSetor"
        android:ems="10"
        android:hint="@string/plaqueta"
        android:inputType="number"
        android:text="" />

    <EditText
        android:id="@+id/edtTipo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/edtPlaqueta"
        android:ems="10"
        android:hint="@string/tipo"
        android:inputType="textPersonName"
        android:text="" />

    <EditText
        android:id="@+id/edtMarca"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/edtTipo"
        android:ems="10"
        android:hint="@string/marca"
        android:inputType="textPersonName"
        android:text="" />

    <EditText
        android:id="@+id/edtModelo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/edtMarca"
        android:ems="10"
        android:hint="@string/modelo"
        android:inputType="textPersonName"
        android:text="" />


</RelativeLayout>